<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="343.0" prefWidth="521.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FileCopyController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="File Copy" />

        <Label layoutX="20.0" layoutY="70.0" text="Copy from:" />
        <TextField fx:id="fromLbl" layoutX="100.0" layoutY="65.0" prefWidth="200.0" />
        <Button layoutX="310.0" layoutY="65.0" onAction="#selectFileFrom" text="Select File" />

        <Label layoutX="20.0" layoutY="110.0" text="Copy to:" />
        <TextField fx:id="toLbl" layoutX="100.0" layoutY="105.0" prefWidth="200.0" />
        <Button layoutX="310.0" layoutY="105.0" onAction="#selectFileTo" text="Select File" />

        <Label layoutX="20.0" layoutY="184.0" text="Progress:" />
        <ProgressBar fx:id="progressBar" layoutX="100.0" layoutY="183.0" prefWidth="200.0" progress="0.0" />

        <Button fx:id="copyBtn" disable="true" layoutX="310.0" layoutY="179.0" text="Copy" />
      <Label fx:id="copyStatus" layoutX="99.0" layoutY="220.0" prefHeight="17.0" prefWidth="200.0" />
    </children>
</AnchorPane>
